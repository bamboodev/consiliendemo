{
	"format": "page",
	"id": "article",
	"label": "Article",
	"repeatable": true,
	"status": true,
	"json": {
		"Main": {
			"uid": {
				"type": "UID",
				"config": {
					"label": "UID"
				}
			},
			"title": {
				"type": "Text",
				"config": {
					"label": "Title",
					"placeholder": ""
				}
			},
			"featured_image": {
				"type": "Image",
				"config": {
					"label": "Featured Image",
					"constraint": {},
					"thumbnails": []
				}
			},
			"date": {
				"type": "Text",
				"config": {
					"label": "Date",
					"placeholder": ""
				}
			},
			"category": {
				"type": "Select",
				"config": {
					"label": "Category",
					"placeholder": "",
					"options": [
						"Backup and Disaster Recovery",
						"Compliance",
						"Cybersecurity",
						"IT and Business Operations",
						"Microsoft Updates",
						"News"
					]
				}
			},
			"author": {
				"type": "Select",
				"config": {
					"label": "Author",
					"placeholder": "",
					"options": ["Eric Kong", "Fred Romero"]
				}
			},
			"content": {
				"type": "StructuredText",
				"config": {
					"label": "Content",
					"placeholder": "",
					"allowTargetBlank": true,
					"multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item"
				}
			},
			"slices": {
				"type": "Slices",
				"fieldset": "Slice Zone",
				"config": {
					"choices": {
						"card_list": {
							"type": "SharedSlice"
						},
						"custom_script": {
							"type": "SharedSlice"
						},
						"hero_text": {
							"type": "SharedSlice"
						},
						"call_to_action": {
							"type": "SharedSlice"
						},
						"counter": {
							"type": "SharedSlice"
						},
						"clutch_reviews": {
							"type": "SharedSlice"
						},
						"faqs": {
							"type": "SharedSlice"
						},
						"multi_column": {
							"type": "SharedSlice"
						},
						"icon_grid": {
							"type": "SharedSlice"
						},
						"contact_form": {
							"type": "SharedSlice"
						},
						"journey_map": {
							"type": "SharedSlice"
						},
						"item_table": {
							"type": "SharedSlice"
						},
						"partners_carousel": {
							"type": "SharedSlice"
						},
						"rto_calculator": {
							"type": "SharedSlice"
						},
						"page_hero": {
							"type": "SharedSlice"
						},
						"one_column_text": {
							"type": "SharedSlice"
						},
						"hero_form": {
							"type": "SharedSlice"
						},
						"full_screen_hero": {
							"type": "SharedSlice"
						},
						"three_column_content": {
							"type": "SharedSlice"
						},
						"two_column_text_image": {
							"type": "SharedSlice"
						},
						"two_column_text": {
							"type": "SharedSlice"
						},
						"rich_text": {
							"type": "SharedSlice"
						},
						"two_column_text_image_accordion": {
							"type": "SharedSlice"
						}
					}
				}
			}
		},
		"SEO & Metadata": {
			"meta_title": {
				"config": {
					"label": "Meta Title",
					"placeholder": "A title of the page used for social media and search engines"
				},
				"type": "Text"
			},
			"meta_description": {
				"config": {
					"label": "Meta Description",
					"placeholder": "A brief summary of the page"
				},
				"type": "Text"
			},
			"meta_image": {
				"config": {
					"constraint": {
						"height": 1260,
						"width": 2400
					},
					"label": "Meta Image",
					"thumbnails": []
				},
				"type": "Image"
			},
			"schema": {
				"type": "Text",
				"config": {
					"label": "Schema",
					"placeholder": ""
				}
			}
		}
	}
}
